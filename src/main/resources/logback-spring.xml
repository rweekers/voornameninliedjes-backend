<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="CONTAINER" value="${CONTAINER:-default}" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5level [%t] %C{1}: %msg%n%throwable</pattern>
        </encoder>
    </appender>

    <!-- Local development -->
    <springProfile name="dev">
        <appender name="FileAppender" class="ch.qos.logback.core.FileAppender">
            <file>${LOG_PATH}/app-${CONTAINER}.log</file>
            <append>true</append>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="FileAppender"/>
        </root>
    </springProfile>

    <springProfile name="pro, log">
        <root level="INFO">
            <appender-ref ref="Console"/>
        </root>
    </springProfile>

    <springProfile name="log-coloured">
        <appender name="ConsoleColoured" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%yellow(%d{ISO8601}) %highlight(%-5level) [%green(%t)] %cyan(%C{1}): %msg%n%throwable</pattern>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="ConsoleColoured"/>
        </root>
    </springProfile>

    <!-- Fallback when no profile is active -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="Console"/>
        </root>
    </springProfile>

</configuration>
